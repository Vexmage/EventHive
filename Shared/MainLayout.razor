@namespace EventHive.Shared
@inherits LayoutComponentBase

<div class="main-layout d-flex flex-column">
    <!-- Header -->
<header class="header bg-primary text-white py-3 honeycomb-bg">
    <div class="container d-flex justify-content-between align-items-center">
        <h1 class="logo mb-0">EventHive</h1>
        <nav>
            <a href="/" class="nav-link">Home</a>
            <a href="/events" class="nav-link">Events</a>
            <a href="/about" class="nav-link">About</a>
        </nav>
    </div>
</header>


    <!-- Content -->
    <main class="content flex-grow-1">
        @Body
    </main>

    <!-- Footer -->
    <footer class="footer bg-dark text-white text-center py-3">
        <p class="mb-0">© 2025 EventHive. All Rights Reserved.</p>
    </footer>
</div>

<style>
    /* Global Styles */
    body {
        font-family: 'Roboto', sans-serif;
        background-color: var(--background-color);
        color: var(--text-color);
    }

    h1, h2, h3, h4, h5 {
        font-family: 'Montserrat', sans-serif;
    }

    /* Header */
    .header {
        background-color: var(--primary-color);
        border-bottom: 5px solid var(--accent-color);
    }

    .header .logo {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .header .nav-link {
        margin: 0 10px;
        color: white;
        font-weight: 500;
        text-decoration: none;
    }

    .header .nav-link:hover {
        text-decoration: underline;
    }

    /* Footer */
    .footer {
        background-color: var(--neutral-color);
        color: white;
        font-size: 0.9rem;
    }

    /* Content */
    .content {
        padding: 20px;
    }

    /* Buttons */
    .btn-primary {
        background-color: var(--accent-color);
        border: none;
    }

    .btn-primary:hover {
        background-color: var(--secondary-color);
    }
</style>
